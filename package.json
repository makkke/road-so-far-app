    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "browser-sync": "^2.18.6",
    "chai": "^4.0.0-canary.1",
    "connect-history-api-fallback": "^1.3.0",
    "css-loader": "^0.26.1",
    "ejs": "^2.5.5",
