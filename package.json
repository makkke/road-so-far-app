    "jwt-decode": "^2.1.0",
    "material-ui": "^0.17.0",
    "material-ui-places": "^1.0.3",
    "moment": "^2.17.1",
    "npm": "^4.2.0",
    "react": "^15.4.2",
    "react-apollo": "^0.11.1",
    "react-dom": "^15.4.2",
    "react-google-autocomplete": "^1.0.12",
    "react-helmet": "^4.0.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-mdl-datepicker": "^1.0.0",
