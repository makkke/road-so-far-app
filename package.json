{
  "name": "road-so-far-app",
  "version": "0.0.2",
  "scripts": {
    "start:dev": "node tools/run.js",
    "eslint": "eslint src test tools postcss.config.js webpack.config.js",
    "stylelint": "stylelint \"components/**/*.css\" \"src/**/*.css\"",
    "lint": "npm run eslint && npm run stylelint",
    "test": "mocha --compilers js:babel-register",
    "test:watch": "mocha --compilers js:babel-register --reporter min --watch",
    "build": "node tools/build.js",
    "build:debug": "node tools/build.js --debug",
    "publish": "node tools/publish.js",
    "publish:debug": "node tools/publish.js --debug"
  },
  "dependencies": {
    "apollo-client": "^0.8.7",
    "auth0-js": "^8.2.0",
    "babel-polyfill": "^6.22.0",
    "classnames": "^2.2.5",
